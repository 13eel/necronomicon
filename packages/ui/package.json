{
  "name": "@acme/ui",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist",
    "./styles.css": "./dist/styles.css"
  },
  "license": "ISC",
  "scripts": {
    "lint": "eslint *.ts*",
    "build": "tsup src/index.tsx --format esm,cjs --dts --external react && tailwindcss -i ./src/styles.css -o ./dist/styles.css",
    "dev": "pnpm with-env concurrently \"tsup src/index.tsx --format esm,cjs --dts --external react --watch\" \"tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch\"",
    "clean": "rm -rf dist",
    "with-env": "dotenv -e ../../.env --"
  },
  "devDependencies": {
    "@acme/tailwind-config": "workspace:*",
    "@acme/tsconfig": "workspace:*",
    "@types/react": "18.0.27",
    "@types/react-dom": "18.0.10",
    "class-variance-authority": "^0.3.0",
    "eslint": "8.33.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@acme/characters": "workspace:*",
    "@t3-oss/env-nextjs": "^0.3.1",
    "concurrently": "^7.6.0",
    "dotenv-cli": "^7.2.1",
    "tsup": "^6.5.0",
    "z": "^1.0.9"
  }
}
